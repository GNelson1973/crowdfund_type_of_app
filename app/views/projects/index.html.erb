<h1><%= pluralize(@projects.length, "project") %></h1>

<%= link_to "Add New Project", new_project_path %>

<% @projects.each do |project| %>
  <article>
    <header>
      <h2><%= link_to project.name, project %></h2>
      <%= image_for(project) %>
    </header>
    <p>
      <%= truncate(project.description, length: 30, separator: ' ') %>
    </p>
    <table>
      <tr>
        <th>Target amount:</th>
        <td><%= number_to_currency(project.target_pledge_amount, :unit => "EUR ") %></td>
      </tr>
      <tr>
        <th>Website:</th>
        <td><%= project.website %></td>
      </tr>
      <tr>
        <th>Pledging ends on:</th>
        <td><%= pledging_ends_format(project) %></td>
      </tr>
      <tr>
        <th>Team members:</th>
        <td><%= project.team_members %></td>
      </tr>
    </table>
  </article>
<% end %>
