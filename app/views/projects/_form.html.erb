<%= form_for(@project) do |f| %>
<%= render "shared/errors" %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %><br/>
        <%= f.text_field :name, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :description %><br/>
        <%= f.text_area :description, cols: 50, rows: 6 %>
      </li>
      <li class="required">
        <%= f.label :target_pledge_amount %><br/>
        <%= f.number_field :target_pledge_amount %>
      </li>
      <li class="required">
        <%= f.label :website %><br/>
        <%= f.text_field :website %>
      </li>
      <li class="required">
        <%= f.label :pledging_ends_on %><br/>
        <%= f.date_select :pledging_ends_on %>
      </li>
      <li class="required">
        <%= f.label :team_members %><br/>
        <%= f.text_field :team_members %>
      </li>
      <li>
        <%= f.label :image_file_name %><br/>
        <%= f.text_field :image_file_name %>
      </li>
    </ol>
    <p>
      <%= f.submit %> <%= link_to "Cancel", root_path, class: 'cancel' %>
    </p>
  </fieldset>
<% end %>
