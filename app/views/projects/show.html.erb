  <article id="project" class="project">
    <header>
      <%= image_for_show(@project) %>
      <h2><%= @project.name %></h2>
    </header>

    <p>
      <%= @project.description %>
    </p>

    <table>
      <tr>
        <th>Target amount:</th>
        <td><%= number_to_currency(@project.target_pledge_amount, :unit => "EUR ", :precision => 0) %></td>
      </tr>
      <tr>
        <th>Website:</th>
        <td><%= @project.website %></td>
      </tr>
      <tr>
        <th>Pledging ends on:</th>
        <td><%= pledging_ends_format(@project) %></td>
      </tr>
      <tr>
        <th>Team members:</th>
        <td><%= @project.team_members %></td>
      </tr>
    </table>
    <p>
      <%= link_to "Who has made pledges?", project_pledges_path(@project) %>
    </p>
    <footer>
      <%= link_to "Make a pledge!", new_project_pledge_path(@project), class:"button ok register" %>
      <nav>
    <%= link_to "Edit", edit_project_path(@project), class: 'cancel' %>
    <%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure?"}, class: 'cancel' %>
      </nav>
    </footer>
  </article>
